{
  "name": "ai-coding-tool",
  "version": "1.0.0",
  "description": "A powerful AI-powered coding assistant similar to Trae, supporting multiple AI models",
  "main": "dist/main.js",
  "bin": {
    "aicoding": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/main.js', '755')\"",
    "dev": "tsc --watch",
    "start": "node dist/main.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "code-generation",
    "openai",
    "gemini",
    "deepseek"
  ],
  "author": "AI Coding Tool",
  "license": "MIT",
  "dependencies": {
    "commander": "^9.4.1",
    "inquirer": "^8.2.5",
    "chalk": "^4.1.2",
    "figlet": "^1.5.2"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "typescript": "^4.8.3",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.1",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.1",
    "@types/jest": "^29.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}